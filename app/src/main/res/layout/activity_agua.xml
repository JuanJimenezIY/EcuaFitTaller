<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comida_backgorund"
    tools:context=".ui.activities.AguaActivity">

    <TextView
        android:id="@+id/textView3"
        style="@style/titulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="68dp"

        android:text="@string/agua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalAgua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="36dp"

        android:text="0 ml"
        android:theme="@style/subtituloAyP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="107dp"
        android:layout_height="145dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/boton_menos"
        app:layout_constraintTop_toBottomOf="@+id/totalAgua"
        app:srcCompat="@drawable/awa" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_mas"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right|bottom"
        android:layout_marginStart="20dp"
        android:layout_marginTop="315dp"
        android:backgroundTint="@color/principal_color_ej"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_menos"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right|bottom"
        android:layout_marginStart="50dp"
        android:layout_marginTop="315dp"
        android:backgroundTint="@color/principal_color_ej"
        android:src="@drawable/menos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:text="@string/vasos"
        android:theme="@style/textoAyP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/totalVasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="36dp"
        android:text="0"
        android:theme="@style/textoAyP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>