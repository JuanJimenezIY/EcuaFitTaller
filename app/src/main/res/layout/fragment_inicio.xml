<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/principal_color_ej"
    tools:context=".ui.fragments.InicioFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        style="@style/titulos"
        android:id="@+id/progreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grafica"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/progreso"
        android:src="@drawable/grafica"
        ></ImageView>


    <androidx.cardview.widget.CardView
        android:id="@+id/caloriasCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/button_font_color_ej"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grafica"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/boton_color"
                android:text="Calorias consumidas"
                android:textSize="20sp" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/boton_color"
                android:gravity="center"
                android:text="1200 cals"
                android:textSize="40sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@id/pesoCard"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="@color/button_font_color_ej"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caloriasCard"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/boton_color"
                android:text="Peso "
                android:textSize="20sp" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/boton_color"
                android:gravity="center"
                android:text=" +0.5 kg"
                android:textSize="40sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--este debe ser recycle view-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/button_font_color_ej"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pesoCard"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/boton_color"
                android:text="Historial "
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/boton_color"
                android:gravity="center"
                android:text="1900 cals     04/19"
                android:textSize="30sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/boton_color"
                android:gravity="center"
                android:text="2200 cals     04/18"
                android:textSize="30sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>